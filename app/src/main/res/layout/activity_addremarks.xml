<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addremarks"
    android:background="#A0073B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD REMARKS"
        android:textColor="#fff"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/remarks_text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add remarks"
        android:textColorHint="#000"
        android:textSize="20dp"
        android:textColor="#000"
        android:background="@drawable/bttn_backgrounparent"
        android:padding="15dp"
        android:layout_below="@id/id_et"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/remarks_et"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add student id"
        android:textColorHint="#000"
        android:textSize="20dp"
        android:textColor="#000"
        android:background="@drawable/bttn_backgrounparent"
        android:padding="15dp"
        android:layout_below="@id/remarks_text"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/id_et"
        />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:background="@drawable/bttn_backgrounparent"
        android:textSize="30dp"
        android:padding="10dp"
        android:layout_below="@+id/remarks_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="#A0073B"
        android:id="@+id/button_remarks"

        />

</RelativeLayout>