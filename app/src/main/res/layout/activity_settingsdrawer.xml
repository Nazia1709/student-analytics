<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingsdrawer"
    android:background="#A0073B">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Info"
        android:textSize="40dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_below="@id/change_password_text"
        android:layout_toRightOf="@id/rounded_i"
        android:layout_marginLeft="10dp"
        android:id="@+id/appinfo_text"
        android:onClick="open_appinfo"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/appinforound"
        android:layout_marginTop="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lock_image"
        android:layout_marginLeft="5dp"
        android:id="@+id/rounded_i"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="40dp"
        android:textColor="#fff"
        android:layout_toRightOf="@id/questioin_mark"
        android:layout_marginTop="25dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/appinfo_text"
        android:id="@+id/help_text"
        android:onClick="open_help"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/information"
        android:layout_marginLeft="5dp"

        android:layout_below="@id/rounded_i"
    android:layout_alignParentLeft="true"

        android:layout_marginTop="30dp"
        android:id="@+id/questioin_mark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="40dp"
        android:textColor="#fff"
      android:layout_toRightOf="@id/lock_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:onClick="open_change_password"
        android:id="@+id/change_password_text"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/addclass_drawer"

        android:layout_marginTop="55dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/lock_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textSize="40dp"
        android:textColor="#fff"
        android:layout_toRightOf="@id/share_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_below="@id/help_text"
        android:id="@+id/share_text"
        android:onClick="share_app"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/share"
        android:layout_below="@id/questioin_mark"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="33dp"
        android:id="@+id/share_image"
        android:layout_marginLeft="5dp"
        />


</RelativeLayout>